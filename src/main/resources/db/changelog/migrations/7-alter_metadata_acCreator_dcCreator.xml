<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

  <!-- Modify  ac_metadata_creator_id and dc_creator_id to be of UUID type -->
  <changeSet id="7-alter_metadata_acCreator_dcCreator" context="schema-change" author="keyuk">

    <!-- Must drop columns then add again due to casting error -->
    <dropColumn tableName="metadata">
      <column name="ac_metadata_creator_id" />
      <column name="dc_creator_id" />
    </dropColumn>

    <addColumn tableName="metadata">
      <column name="ac_metadata_creator_id" type="uuid" />
      <column name="dc_creator_id" type="uuid" />
    </addColumn>

  </changeSet>

</databaseChangeLog>
